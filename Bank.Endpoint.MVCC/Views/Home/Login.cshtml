@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<form method="post">
    <label>Card Number:</label>
    <input type="text" name="cardNumber" required />
    <label>Password:</label>
    <input type="password" name="password" required />
    <button type="submit">Login</button>
</form>

@if (ViewBag.Message != null)
{
        <p>@ViewBag.Message</p>
}
