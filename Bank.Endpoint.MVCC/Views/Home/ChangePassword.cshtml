@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>
<form method="post">
    <label>New Password:</label>
    <input type="password" name="newPassword" required />
    <button type="submit">Change Password</button>
</form>

@if (ViewBag.Message != null)
{
        <p>@ViewBag.Message</p>
}
