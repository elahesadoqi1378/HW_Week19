@{
    ViewData["Title"] = "Change Password";
}

<h2 class="text-center my-4">Change Password</h2>

<form method="post" action="/Card/ChangePassword" class="mx-auto" style="max-width: 500px;">
    <div class="form-group">
        <label for="cardNumber">Card Number:</label>
        <input type="text" id="cardNumber" name="cardNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="newPassword">New Password:</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" required />
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block">Change Password</button>
    </div>
</form>

@if (ViewData["Message"] != null)
{
    <p class="text-center mt-3 text-success">@ViewData["Message"]</p>
}

<style>
    h2 {
        color: #343a40;
    }
    .form-group label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
    .text-success {
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>